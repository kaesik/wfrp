#:set s dp(150)

<CanvasExamplesTabs@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "Example 1"
        CanvasExample1:
    TabbedPanelItem:
        text: "Example 2"
        CanvasExample2:
    TabbedPanelItem:
        text: "Example 3"
        CanvasExample3:
    TabbedPanelItem:
        text: "Example 4"
        CanvasExample4:
    TabbedPanelItem:
        text: "Example 5"
        CanvasExample5:
    TabbedPanelItem:
        text: "Example 6"
        CanvasExample6:
    TabbedPanelItem:
        text: "Example 7"
        CanvasExample7:


<CanvasExample1>:
    canvas:
        Rectangle  :
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s

        Ellipse:
            pos: 200, 500
            size: s, s/2

        Line:
            points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width, 0)
            width: 2

<CanvasExample2>:
    canvas:
        Line:
            points:(0, self.height/2, self.width, self.height/2)
        Line:
            points:(self.width/2, 0, self.width/2, self.height)

<CanvasExample3>:
    canvas:
        Line:
            circle: (200, 200, 100) #center_x, center_y, radius
            width: 2
        Color:
            rgba: 1, 0, 0, .5
        Line:
            ellipse: (200, 200, 100, 100) #center_x, center_y, radius_x, radius_y
            width: 3
        Color:
            rgba: 0, 1, 0, .3
        Line:
            rectangle: (200, 200, 100, 100) #x, y, width, height
            width: 4

<CanvasExample4>:
    Button:
        pos: 100, 400,
        text: "A"
        on_press: root.on_button_a_click()

<CanvasExample6>:
    Button:
        canvas:
            Rectangle:
        text: "A"
        pos: 100, 100

<CanvasExample7>:
    RelativeLayout:
        canvas:
            Color:
                rgb: 0,0,1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1,0,0
            Rectangle:
                size: self.size