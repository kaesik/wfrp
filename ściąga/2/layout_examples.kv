<AnchorLayoutExample>:
    #right, left, center
    anchor_x: "right"
    #bottom, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: 1, .5
        # size: "100dp", "50dp"
        # width: "100dp"
        height: "100dp"
        # x, center_x, right
        # y, center_y, top
        pos_hint: {"y" : .25}

    BoxLayout:
        orientation: "vertical"
        spacing: "5dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
    Label:
        text: "C"

